<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :home_team %>
    <%= form.text_field :home_team, id: :game_home_team %>
  </div>

  <div class="field">
    <%= form.label :away_team %>
    <%= form.text_field :away_team, id: :game_away_team %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_select :date, id: :game_date %>
  </div>

  <div class="field">
    <%= form.label :favored_team %>
    <%= form.text_field :favored_team, id: :game_favored_team %>
  </div>

  <div class="field">
    <%= form.label :spread %>
    <%= form.text_field :spread, id: :game_spread %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
