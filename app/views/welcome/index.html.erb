<body class="landing-body">
  <div class="container">
    <% flash.each do |key, value| %>
      <div id="flash" class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
  </div>

  <script type="text/javascript">
$(document).ready(function(){
  setTimeout(function(){
    $('#flash').remove();
  }, 5000);
})
  </script>

  <%= render 'partials/signin' %>
  <%= render 'partials/register' %>

  <div class="landing-content">
    <h1>Welcome to Wagr</h1>
    <h4>A place for friendly bets</h4>
    <button class="landing-btn" data-toggle="modal" data-target="#signIn" style="cursor: pointer">Sign In</button>
    <br />
    <button class="landing-btn" data-toggle="modal" data-target="#registration" style="cursor: pointer">Register</button>
  </div>
</body>
